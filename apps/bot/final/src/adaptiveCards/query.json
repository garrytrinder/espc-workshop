{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.6",
  "msteams": {
      "width": "Full"
  },
  "body": [
      {
          "type":"Container",
          "items":[
              {
                  "type": "TextBlock",
                  "text": "üôã ${title}",
                  "wrap": true,
                  "style": "heading",
                  "size": "extraLarge"
              },
              {
                  "type": "TextBlock",
                  "text": "${product} ${type}",
                  "wrap": true
              },
              {
                  "type": "TextBlock",
                  "text": "${description}",
                  "fontType": "monospace",
                  "wrap": true
              }
          ]
      },
      {
          "id": "form",
          "type": "Container",
          "items": [
              {
                  "type": "TextBlock",
                  "text": "üë©‚Äçüíª Assign to:",
                  "wrap": true
              },
              {
                  "id": "agentId",
                  "type": "Input.ChoiceSet",
                  "choices": [],
                  "choices.data": {
                      "type": "Data.Query",
                      "dataset": "graph.microsoft.com/users"
                  },
                  "isMultiSelect": false,
                  "isRequired": true
              },
              {
                  "id": "title",
                  "type": "Input.Text",
                  "value": "${title}",
                  "isVisible": false
              },
              {
                  "id": "description",
                  "type": "Input.Text",
                  "value": "${description}",
                  "isVisible": false
              },
              {
                  "id": "product",
                  "type": "Input.Text",
                  "value": "${product}",
                  "isVisible": false
              },
              {
                  "id": "type",
                  "type": "Input.Text",
                  "value": "${type}",
                  "isVisible": false
              }
          ]
      }
  ],
  "actions": [
      {
          "type": "Action.Execute",
          "title": "Assign",
          "verb": "assign"
      }
  ]
}