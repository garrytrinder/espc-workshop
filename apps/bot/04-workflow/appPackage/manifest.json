{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.microsoft.teams.extension",
    "developer": {
        "name": "Teams App, Inc.",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/privacy",
        "termsOfUseUrl": "https://www.example.com/termofuse"
    },
    "icons": {
        "color": "color-${{TEAMSFX_ENV}}.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "PS Bot",
        "full": "Product support Bot"
    },
    "description": {
        "short": "Simplify the product support process",
        "full": "Simplify the product support process with an automated workflow that sends a message to the Product support Teams channel when a new customer query is raised. Agents can be assigned the support query directly from the message. Agents can interact with information in the Product support SharePoint Online team site via bot commands."
    },
    "accentColor": "#FFFFFF",
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": [
                "team"
            ],
            "supportsFiles": false,
            "isNotificationOnly": false
        }
    ],
    "composeExtensions": [],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": []
}