{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",
    "msteams": {
        "width": "Full"
    },
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "‚úÖ ${title}",
                    "wrap": true,
                    "style": "heading",
                    "size": "extraLarge"
                },
                {
                    "type": "TextBlock",
                    "text": "${product} ${type}",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "${description}",
                    "fontType": "monospace",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "üë©‚Äçüíª Assigned to: ${agentName}",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "${comment}",
                    "fontType": "monospace",
                    "wrap": true
                }
            ]
        },
        {
            "id": "form",
            "type": "Container",
            "items": [
                {
                    "id": "comment",
                    "type": "Input.Text",
                    "value": "${comment}",
                    "isVisible": false
                },
                {
                    "id": "title",
                    "type": "Input.Text",
                    "value": "${title}",
                    "isVisible": false
                },
                {
                    "id": "description",
                    "type": "Input.Text",
                    "value": "${description}",
                    "isVisible": false
                },
                {
                    "id": "product",
                    "type": "Input.Text",
                    "value": "${product}",
                    "isVisible": false
                },
                {
                    "id": "type",
                    "type": "Input.Text",
                    "value": "${type}",
                    "isVisible": false
                }
            ]
        }
    ]
}